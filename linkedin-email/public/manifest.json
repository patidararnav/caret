{
  "manifest_version": 3,
  "name": "Caret",
  "version": "1.0.0",
  "icons": {
    "16": "careticon.png",
    "48": "careticon.png",
    "128": "careticon.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": "careticon.png"
  },
  "permissions": ["scripting", "activeTab", "tabs", "storage", "sidePanel", "contextMenus"],
  "background": {
    "service_worker": "serviceWorker.js",
    "type": "module"
  },
  "host_permissions": ["<all_urls>"],
  "side_panel": {
    "default_path": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_start"
    }
  ]
}
